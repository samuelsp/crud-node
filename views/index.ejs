<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <h1>
    <%= title %>
  </h1>
  <p>Clientes já cadastrados no sistema.</p>
  <table style="width:50%">
    <thead>
      <tr style="background-color: #CCC">
        <td style="width:50%">Nome</td>
        <td style="width:15%">Idade</td>
        <td style="width:15%">Sexo</td>
        <td style="width:15%">UF</td>
        <td style="width:20%">Ações</td>
      </tr>
    </thead>
    <tbody>
      <% if(!docs || docs.length==0) { %>
        <tr>
          <td colspan='4'>Nenhum cliente cadastrado.</td>
        </tr>
        <% } else { docs.forEach(function(customer){ %>
          <tr>
            <td style='width:50%'>
              <a href="/edit/<%= customer._id %>">
                <%= customer.nome %>
              </a>
            </td>
            <td style='width:15%'>
              <%= customer.idade %>
            </td>
            <td style='width:15%'>
              <%= customer.sexo %>
            </td>
            <td style='width:15%'>
              <%= customer.uf %>
            </td>
            <td style='width:20%'>
              <a href="/delete/<%= customer._id %>" onclick="return confirm('Tem certeza que deseja excluir?');">
                Excluir
              </a>
            </td>
          </tr>
          <% }) }%>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="4">
          <a href="/cadastrar">Cadastrar Novo</a>
        </td>
      </tr>
    </tfoot>
  </table>
</body>

</html>